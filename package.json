{
  "name": "multigameinc-launcher",
  "productName": "MultiGameInc-Launcher",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Breve descripciÃƒÂ³n de mi app",
  "author": "Mi Nombre <multigameinc@gmail.com>",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.multigameinc.launcher",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "**/assets/**"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/MultiGameInc.ico"
    },
    "icon": "build/MultiGameInc.ico",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "shortcutName": "MultiGameInc-Launcher",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/MultiGameInc.ico",
      "uninstallerIcon": "build/MultiGameInc.ico",
      "installerHeaderIcon": "build/MultiGameInc.ico",
      "include": "build/installer.nsh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Pimpoli",
        "repo": "MultiGameInc-Launcher"
      }
    ]
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0",
    "fs-extra": "^11.3.2"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1"
  }
}
