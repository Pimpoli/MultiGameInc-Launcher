{
  "name": "multigameinc-launcher",
  "productName": "MultiGameInc-Launcher",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Breve descripci√≥n de mi app",
  "author": "Mi Nombre <multigameinc@gmail.com>",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.multigameinc.launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/MultiGameInc.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "shortcutName": "MultiGameInc-Launcher",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/MultiGameInc.ico",
      "uninstallerIcon": "assets/MultiGameInc.ico",
      "installerHeaderIcon": "assets/MultiGameInc.ico",
      "include": "build/installer.nsh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Pimpoli",
        "repo": "MultiGameInc-Launcher"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1"
  }
}
